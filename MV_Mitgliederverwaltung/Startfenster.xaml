<Window x:Class="MV_Mitgliederverwaltung.Startfenster"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MV_Mitgliederverwaltung"
        mc:Ignorable="d"
        Title="Startfenster" Height="450" Width="600" Background="DarkBlue">
    <Grid>
        <StackPanel>
            <StackPanel Margin="0,60,0,0">
                <TextBlock Grid.Row="0"
                   Text="Musikverein Verwaltung"
                   FontSize="40"
                   Foreground="Yellow"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="100">
            <Button Name="AnmeldungButton" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Anmelden" Click="AnmeldungButton_Click" Margin="20"/>
            <Button Name="ohneAnmeldung" Width="200" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Content="ohne Anmeldung fortfahren" Click="OhneAnmeldung_Click"  Margin="20"/>

        </StackPanel>
        </StackPanel>
        

    </Grid>
</Window>
